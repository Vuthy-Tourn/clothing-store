:8080 {
    # Laravel public folder
    root * /app/public

    # Hide sensitive files
    file_server {
        hide .env*
        hide Caddyfile
    }

    # Enable compression
    encode zstd gzip br

    # PHP handler via FrankenPHP Unix socket
    php_fastcgi unix//run/frankenphp.sock

    # Laravel routing: serve existing files or fallback to index.php
    try_files {path} /index.php?{query}

    # Logs to stdout (Railway-friendly)
    log {
        output stdout
        format console
    }

    # Security headers
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}
