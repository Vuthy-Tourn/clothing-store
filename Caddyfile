:8080 {
    # Laravel public folder
    root * /app/public

    # Hide sensitive files
    file_server {
        hide .env*
        hide Caddyfile
    }

    # Enable compression
    encode zstd gzip br

    # PHP handler for Laravel via FrankenPHP
    php_fastcgi unix//run/frankenphp.sock

    # Laravel routing: serve existing files or fallback to index.php
    try_files {path} /index.php?{query}

    # Logs to stdout (Railway-friendly)
    log {
        output stdout
        format console
    }
}